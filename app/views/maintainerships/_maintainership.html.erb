<% if maintainership.maintainer %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to maintainership.maintainer, registry_maintainer_path(maintainership.maintainer.registry.name, maintainership.maintainer) %>
      </h5>
      <% if maintainership.role.present? %>
          <%= maintainership.role %><br/>
      <% end %>
      <small class='text-muted'>
        <%= pluralize number_with_delimiter(maintainership.maintainer.packages_count), 'package' %>
        <% if maintainership.maintainer.total_downloads %>
          <br/>
          <%= pluralize number_with_delimiter(maintainership.maintainer.total_downloads), 'download' %>
        <% end %>
      </small>
    </div>
  </div>
<% end %>